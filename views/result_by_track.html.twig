{% extends "layout.html.twig" %}

{% block body %}



        <p>
        <h1 align="center"> Single </h1></br>
        </p>

<div class="container">
        <table class="table table-hover">
        <thead>
            <tr>
                <th> Pochette </th>
                <th> Titre </th>
                <th> Artiste </th>
                <th> Album </th>
                <th> Ecouter~~<span class="glyphicon glyphicon-music"></span> </th>
                <th> Ajouter </th>
            </tr>
            </thead>
            <tbody>
            {% for  track in results.tracks.items %}

                <tr>
                    <td><img src="{{ track.album.images[1].url }}" width="100" height="100"/></td>
                    <td> {{ track.name }}</td>
                    <td>{{ track.artists.0.name }}</td>
                    <td> {{ track.album.name }} </td>
                    <td>
                        <audio src="{{ track.preview_url }}" controls="controls"></audio>
                    </td>
                    <td align="center"><a href="{{ url('add', {id: track.id} ) }}"> <span
                                    class="glyphicon glyphicon-heart"></span></a></td>
                </tr>

            {% endfor %}

            </tbody>
        </table>


</div>

{% endblock %}


