{% extends "layout.html.twig" %}

{% block body %}

        <div class="container well">
            <div class="row">
                <div class="col-md-3">

                {% if artist.images|length > 0 %}
                    <img src="{{ artist.images[0].url }}" width="300" height="300" class="img-rounded"/>
                {% else %}
                    <span height="100" class="glyphicon glyphicon-apple"></span>
                {% endif %}
                </div>
                <div class="col-md-5 col-md-offset-1">
                <h2>Artiste : {{ artist.name }}</h2>
                <h4> Genre :
                    {% for genre in artist.genres %}
                        {{ genre|capitalize }} &nbsp
                    {% endfor %}
                </h4>
                </div>
            </div>

        </div>

        <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th> Pochette </th>
                    <th> Titre </th>
                    <th> Artiste </th>
                    <th> Album </th>
                    <th>Ecouter~~<span class="glyphicon glyphicon-music"></span></th>
                    <th> Ajouter </th>
                </tr>
            </thead>
            <tbody>
            {% for  track in tracks.tracks %}


                <tr>
                    <td><img src="{{ track.album.images[0].url }}" width="100" height="100"/></td>
                    <td> {{ track.name }}</td>
                    <td> {{ artist.name }} </td>
                    <td>{{ track.album.name }}</td>
                    <td>
                        <audio src="{{ track.preview_url }}" controls="controls"></audio>
                    </td>

                    <td align="center"><a href="{{ url('add', {id: track.id} ) }}"> <span
                                    class="glyphicon glyphicon-heart"></span> </a></td>
                </tr>


            {% endfor %}
            </tbody>

        </table>
        </div>


{% endblock %}