{% extends "layout.html.twig" %}

{% block body %}


        <div class="container well">

        <div class="row">
            <div class="col-md-3">
            {% if artist.images|length > 0 %}
                <img src="{{ artist.images[0].url }}" width="300" height="300"/>
            {% else %}
                <span height="100" class="glyphicon glyphicon-apple"></span>
            {% endif %}
                </div>
            <div class="col-md-5 col-md-offset-1">
                <h2>Artiste : {{ artist.name }}</h2>
                <h4> Genre :
                    {% for genre in artist.genres %}
                        {{ genre|capitalize }} &nbsp
                    {% endfor %}
                </h4>
            </div>
        </div>


        </div>

        <div class="container">
        <table class="table table-hover">
        <thead>
            <tr>
                <th> Pochette </th>
                <th> Album </th>
                <th>Type d'album</th>
                <th> Voir ses tracks </th>
            </tr>
        </thead>
        <tbody>
            {% for  album in albums.items %}
                <tr>
                    {% if album.images|length > 0 %}
                        <td><img src="{{ album.images[0].url }}" width="100" height="100"/></td>
                    {% else %}
                        <td><span height="100" class="glyphicon glyphicon-apple"></span></td>
                    {% endif %}
                    <td> {{ album.name }}</td>
                    <td>{{ album.album_type }}</td>
                    <td align="center"><a href="{{ url('gettracksbyalbumid', {id: album.id} ) }}"><span
                                    class="glyphicon glyphicon-search"></span></a></td>

                </tr>

            {% endfor %}
        </tbody>

        </table>

</div>

{% endblock %}

